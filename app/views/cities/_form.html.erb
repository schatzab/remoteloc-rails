<%= error_messages_for(@city) %>
<!-- we need something to reference f, this is done on the primary page where this _form is plugged into -->

<table summary="City form fields">
	<tr>
		<th><%= f.label(:name, "Name *") %></th>
		<td><%= f.text_field(:name) %></td>
	</tr>
	<tr>
		<th><%= f.label(:state_id) %></th>
		<td><%= f.text_field(:state_id) %><br>
			<%= select_tag :state, options_for_select(us_states, :state_id) %>
		</td>
	</tr>
	<tr>
		<th><%= f.label(:position) %></th>
		<td><%= f.text_field(:position) %></td>
	</tr>
	<tr>
		<th><%= f.label(:permalink) %></th>
		<td><%= f.text_field(:permalink) %></td>
	</tr>
	<tr>
		<th><%= f.label(:visible) %></th>
		<td><%= f.check_box(:visible) %></td>
	</tr>
	<tr>
		<th><%= f.label(:created_at) %></th>
		<td><%= f.datetime_select(:created_at, :order => [:month, :day, :year]) %></td> <!-- don't actually use this, just example -->
	</tr> 
</table>